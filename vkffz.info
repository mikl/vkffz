name = VKFFZ
description =  VKFFZ theme based on the Aurora base theme.
core = 7.x
base theme = aurora

; ========================================
; CTools plugins.
; ========================================

api[panels][styles][version] = 3
plugins[panels][layouts] = plugins/layouts


; ========================================
; Regions
; ========================================

regions[header]       = 'Header'
regions[main_prefix]  = 'Main Region Prefix'
regions[content]      = 'Main Region'
regions[main_suffix]  = 'Main Region Suffix'
regions[footer]       = 'Footer'

; ========================================
; Stylesheets
; ========================================

stylesheets[all][] = 'css/style.css'
stylesheets[print][] = 'css/print.css'

; ========================================
; Scripts
; ========================================

; ========================================
; Modernizr
; ========================================

modernizr[tests][] = css_boxsizing

; ========================================
; Settings
; ========================================

settings[toggle_node_user_picture] = '1'
settings[toggle_comment_user_picture] = '1'
settings[toggle_comment_user_verification] = '1'
settings[default_logo] = '1'
settings[logo_path] = ''
settings[logo_upload] = ''
settings[default_favicon] = '1'
settings[favicon_path] = ''
settings[favicon_upload] = ''
settings[hide_recomended_modules] = '1'
settings[aurora_min_ie_support] = '9'
settings[aurora_html_tags] = '1'
settings[aurora_typekit_id] = '0'
settings[magic_embedded_mqs] = '0'
settings[magic_css_excludes] = ':core
:contrib
*fuur_base/plugins/layouts*
*vkffz/plugins/layouts*
~admin_menu/*
~modules/system/system.base.css'
settings[magic_footer_js] = '0'
settings[magic_library_head] = '0'
settings[magic_experimental_js] = '0'
settings[magic_js_excludes] = ''
settings[aurora_livereload] = '0'
settings[aurora_livereload_port] = ''
settings[magic_rebuild_registry] = '0'
settings[magic_viewport_indicator] = '0'
settings[magic_modernizr_debug] = ''
settings[magic_performance__active_tab] = 'edit-css'
settings[magic_css_excludes_regex][exclude] = '/^(misc\/(.*)|modules\/(.*)|themes\/(.*)|sites\/all\/modules\/(.*)|(.*)fuur_base\/plugins\/layouts(.*)|(.*)vkffz\/plugins\/layouts(.*))$/'
settings[magic_css_excludes_regex][include] = '/^(sites\/all\/modules\/admin_menu\/(.*)|modules\/system\/system\.base\.css)$/'
settings[magic_js_excludes_regex] = ''
